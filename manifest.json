{
  "manifest_version": 3,
  "name": "Service Fabric Explorer Helper",
  "description": "Adds replica delete helpers to Service Fabric Explorer pages.",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": [
        "*://*/Explorer*",
        "*://*/explorer*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "*://*/Explorer*",
    "*://*/explorer*"
  ],
  "permissions": [],
  "browser_specific_settings": {
    "gecko": {
      "data_collection_permissions": {
        "required": ["none"]
      },
      "id": "@sfx-helper"
    }
  }
}